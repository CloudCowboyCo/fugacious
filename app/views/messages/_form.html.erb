<%= form_for @message, :class => :clearfix do |f| %>
  	
	<%= f.error_messages %>
	<%- model_class = @message.class -%>
	<h3><%=t '.title', :default => t('helpers.titles.new', :model => model_class.model_name.human, :default => "Your secret message") %></h3>
    <%= f.text_area :body %>

    <p class='formp'>
		will self-destruct after&nbsp;<%= f.text_field :max_views -%>&nbsp;view(s)&nbsp;and&nbsp;<%= f.text_field :hours, :value => 20 -%>&nbsp;hours
	</p>
	<%= f.submit %>
<% end %>
